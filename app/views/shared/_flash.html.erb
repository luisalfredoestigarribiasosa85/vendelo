<div class="container mt-4">
    <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
    <% end %>

    <% if flash[:alert] %>
        <div class="alert alert-danger">
            <%= flash[:alert] %>
        </div>
    <% end %>

    <%# Yield content for specific views %>
    <%= yield :content %>
</div>