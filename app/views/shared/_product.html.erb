<div class="card shadow-sm h-100">
  <% if product.image.attached? %>
    <%= image_tag product.image, class: 'card-img-top img-fluid' %>
  <% else %>
    <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
      <p class="text-muted"><%= t('.no_image') %></p>
    </div>
  <% end %>
  <div class="card-body text-center">
    <h5 class="card-title mb-2"><%= product.title %></h5>
    <h6 class="card-subtitle mb-3 text-muted"><%= t('.price') %>: <%= product.price %>$</h6>
    <%= link_to t('.view_details'), product_path(product), class: "btn btn-primary btn-sm" %>
  </div>
</div>