<%= content_for :title, t('categories.new.title') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0"><%= t('categories.new.title') %></h2>
        </div>
        <div class="card-body">
          <%= render "form", category: @category %>
          <div class="mt-3">
            <%= link_to t('categories.new.back_to_categories'), categories_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
