<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= t('categories.form.errors.title', count: category.errors.count) %></h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group w-50 mx-auto">
    <%= form.label :name, t('categories.form.labels.name'), class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>

    <%= form.label :description, t('categories.form.labels.description'), class: 'form-label mt-3' %>
    <%= form.rich_text_area :description, class: 'form-control' %>

    <%= form.submit t('categories.form.submit'), class: 'btn btn-primary mt-2' %>
  </div>
<% end %>
