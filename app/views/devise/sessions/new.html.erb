<div class="container mt-5" style="max-width:420px;">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-center mb-4"><%= t('.title') %></h2>

      <% if resource.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <ul class="mb-0">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, t('.email'), class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: t('.email_placeholder') %>
        </div>

        <div class="mb-3">
          <%= f.label :password, t('.password'), class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: t('.password_placeholder') %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember_me' %>
            <%= f.label :remember_me, t('.remember_me'), class: 'form-check-label', for: 'remember_me' %>
          </div>
        <% end %>

        <div class="d-grid">
          <%= f.submit t('.log_in'), class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
